{
  "name": "fuse-vscode",
  "displayName": "Fuse Language",
  "description": "Syntax highlighting for Fuse",
  "version": "0.0.2",
  "publisher": "fuse",
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "contributes": {
    "configurationDefaults": {
      "[fuse]": {
        "editor.semanticHighlighting.enabled": true
      }
    },
    "configuration": {
      "title": "Fuse",
      "properties": {
        "fuse.lspPath": {
          "type": "string",
          "default": "",
          "description": "Path to fuse-lsp binary (overrides bundled/dist lookup)."
        }
      }
    },
    "languages": [
      {
        "id": "fuse",
        "aliases": [
          "Fuse",
          "fuse"
        ],
        "extensions": [
          ".fuse"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fuse",
        "scopeName": "source.fuse",
        "path": "./syntaxes/fuse.tmLanguage.json"
      }
    ]
  }
}
